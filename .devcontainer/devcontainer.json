{
    "name": "Dev Container",
    "build": {
      "dockerfile": "Containerfile"
    },
    "remoteUser": "vscode", // Set to `root` to connect as root. https://aka.ms/vscode-remote/containers/non-root.
    
    "workspaceFolder": "/workspace",
    "runArgs": [
        "--volume=${localWorkspaceFolder}:/workspace:Z",
        "--pull=newer", // Pull newer images on each build
        
        // XWindow GUI
        "--security-opt", "label=type:container_runtime_t",
        "-v", "${env:XAUTHORITY}:/tmp/.Xauthority:ro",
        "-e", "DISPLAY",
        "-e", "XAUTHORITY=/tmp/.Xauthority",
        "-v", "/tmp/.X11-unix:/tmp/.X11-unix:ro"
    ]

}